<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.input.KeyEvent?>

<?import java.net.URL?>
<VBox fx:id="root" alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oeuvre.Controllers.RegisterController" styleClass="root-register" onKeyPressed="#handleEnterKey">
    <stylesheets>
        <URL value="@loginregister.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <ImageView fitHeight="50.0" fitWidth="50.0" preserveRatio="true">
        <image>

        </image>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </ImageView>
    <Label styleClass="register-title" text="Inscription">
        <font>
            <Font size="28.0" />
        </font>
        <VBox.margin>
            <Insets bottom="20.0" />
        </VBox.margin>
    </Label>
    <Label styleClass="register-label" text="Nom d'utilisateur:" alignment="BASELINE_LEFT" prefWidth="Infinity" />
    <TextField fx:id="usernameField" promptText="Entrez votre nom d'utilisateur" styleClass="register-text-field" prefWidth="Infinity" />
    <Label fx:id="usernameErrorLabel" styleClass="error-label" text="" alignment="BASELINE_LEFT" prefWidth="Infinity" visible="false" />
    <Label styleClass="register-label" text="Mot de passe:" alignment="BASELINE_LEFT" prefWidth="Infinity">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Label>
    <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" styleClass="register-password-field" prefWidth="Infinity" />
    <Label fx:id="passwordErrorLabel" styleClass="error-label" text="" alignment="BASELINE_LEFT" prefWidth="Infinity" visible="false" />
    <Label styleClass="register-label" text="Email:" alignment="BASELINE_LEFT" prefWidth="Infinity">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Label>
    <TextField fx:id="emailField" promptText="Entrez votre email" styleClass="register-text-field" prefWidth="Infinity" />
    <Label fx:id="emailErrorLabel" styleClass="error-label" text="" alignment="BASELINE_LEFT" prefWidth="Infinity" visible="false" />
    <Button fx:id="registerButton" onAction="#handleRegister" styleClass="register-button" text="S'inscrire" prefWidth="Infinity" VBox.vgrow="NEVER">
        <VBox.margin>
            <Insets top="25.0" />
        </VBox.margin>
    </Button>
    <VBox alignment="CENTER" spacing="5.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
        <Label styleClass="secondary-text" text="Déjà un compte?" />
        <Hyperlink onAction="#handleLoginFromRegister" styleClass="signup-link" text="Se connecter" />
    </VBox>
</VBox>