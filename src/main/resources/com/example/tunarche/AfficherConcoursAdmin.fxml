<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:id="rootPane" style="-fx-background-color: #F5F5DC;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TunArche.controllers.AdminConcoursController">



    <!-- 🟤 En-tête -->
    <top>
        <VBox spacing="8" style="-fx-padding: 15;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #8B4513;" text="🛠️ Gestion des Concours">
                <effect>
                    <DropShadow color="rgba(0,0,0,0.15)" offsetX="1" offsetY="1" radius="2" />
                </effect>
            </Label>

            <!-- Barre d’outils -->
            <ToolBar style="-fx-background-color: #ECECEC; -fx-padding: 8 5;">
                <Button onAction="#addConcours" prefWidth="110" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" text="➕ Ajouter" />
                <Button onAction="#editConcours" prefWidth="110" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="✏️ Modifier" />
                <Button onAction="#deleteConcours" prefWidth="110" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="🗑 Supprimer" />

                <Separator orientation="VERTICAL" />

                <Label style="-fx-font-weight: bold;" text="🔍 Filtrer :" />
                <TextField fx:id="searchField" prefWidth="200" promptText="Titre, description..." />
                <Button onAction="#filterConcours" style="-fx-background-color: #9b59b6; -fx-text-fill: white;" text="Rechercher" />

                <!-- 👉 Nouveau bouton "Afficher" -->
                <Button onAction="#showEspaceUtilisateur"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="👤 Afficher Espace Utilisateur"
                        prefWidth="180"
                />
            </ToolBar>


            <Separator />
        </VBox>
    </top>

    <!-- 🟤 Centre : TableView des concours -->
    <center>
        <TableView fx:id="concoursTable" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 3, 3, 0, 0);">

            <columns>
                <TableColumn fx:id="colTitre" prefWidth="150" text="Titre" />
                <TableColumn fx:id="colDescription" prefWidth="300" text="Description" />
                <TableColumn fx:id="colDateDebut" prefWidth="120" text="Date Début" />
                <TableColumn fx:id="colDateFin" prefWidth="120" text="Date Fin" />
            </columns>

            <placeholder>
                <Label prefHeight="20.0" prefWidth="294.0" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Aucun concours disponible pour le moment." />
            </placeholder>
        </TableView>
    </center>

    <!-- 🟤 Bas de page : statut -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #ECECEC; -fx-padding: 10;">
            <Label fx:id="statusLabel" style="-fx-font-style: italic; -fx-text-fill: #7f8c8d;" text="Prêt" />
        </HBox>
    </bottom>
</BorderPane>