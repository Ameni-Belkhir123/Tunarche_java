<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="TunArche.controllers.AjouterConcours"
            prefWidth="1000" prefHeight="600"
            style="-fx-background-color: #F5F5DC;"> <!-- beige clair -->

    <!-- ✅ En-tête -->
    <top>
        <Label text="🎨 Ajouter un Concours"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 20; -fx-text-fill: #8B4513;"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- ✅ Menu latéral (facultatif, tu peux le supprimer si non nécessaire) -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="📂 Menu"
                   style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Button text="🏠 Accueil"
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-pref-width: 150;"/>
            <Button text="📝 Concours"
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-pref-width: 150;"/>
            <Button text="🔙 Retour"
                    onAction="#retourVersAdmin"
                    style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-pref-width: 150;"/>

        </VBox>
    </left>

    <!-- ✅ Formulaire au centre -->
    <center>
        <VBox spacing="15" alignment="TOP_CENTER">
            <padding>
                <Insets top="30" left="20" right="20" bottom="20"/>
            </padding>

            <GridPane hgap="15" vgap="15">
                <Label text="Titre :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="titreField" prefWidth="300" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Description :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextArea fx:id="descriptionArea" prefWidth="300" prefHeight="100"
                          GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Date Début :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dateDebutPicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Date Fin :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dateFinPicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <Label fx:id="erreurLabel" textFill="red" wrapText="true" style="-fx-font-size: 14px;"/>

            <Button text="✅ Ajouter Concours"
                    onAction="#ajouterConcours"
                    style="-fx-background-color: #D2691E; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
        </VBox>
    </center>

</BorderPane>
