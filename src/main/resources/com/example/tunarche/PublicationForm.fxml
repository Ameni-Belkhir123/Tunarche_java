<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.PieChart?>

<?import javafx.scene.image.Image?>
<BorderPane prefHeight="600" prefWidth="1494.0"  xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TunArche.controllers.PublicationFormController">

    <!-- 🔝 Titre principal -->
    <top>
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 20;" text="📝 Ajouter une publication" BorderPane.alignment="CENTER" />
    </top>

    <!-- 🔹 Menu latéral -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 20;">

            <!-- ✅ AVATAR -->
            <MenuButton fx:id="avatarMenu"  text=""
                        style="-fx-background-color: transparent; -fx-cursor: hand;"
                        alignment="CENTER">
                <graphic>
                    <ImageView fitHeight="80" fitWidth="80" preserveRatio="true" smooth="true" style="-fx-clip: circle;">
                        <image>
                            <Image url="@images/avatar.png"/>
                        </image>
                    </ImageView>
                </graphic>
                <items>
                    <MenuItem fx:id="menuItemUser" text="" />


                </items>
            </MenuButton>

            <!-- ✅ MENU BOUTONS -->
            <Button onAction="#handeluser" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-pref-width: 150;" text="👥 Utilisateurs" />
            <Button fx:id="eventbutton" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-pref-width: 150;" text="📅 Événements" onAction="#handelevent"/>
            <Button fx:id="btnBillets" onAction="#handebillet" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-pref-width: 150;" text="🎫 Billets" />
            <Button onAction="#handleCommantaire" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-pref-width: 150;" text="🎓 Commantaire" />
            <Button onAction="#handlePublication" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-pref-width: 150;" text="🎓 Publication" />
            <Button onAction="#handleformation" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-pref-width: 150;" text="🎓 Formations" />
            <Button onAction="#handleevaluation" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-pref-width: 150;" text="🎓 Evaluation" />
            <Button onAction="#handelconcours" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-pref-width: 150;" text="🎓 Concours" />
            <Button onAction="#handelparticipation" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-pref-width: 150;" text="🎓 Participations" />

            <Button onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-pref-width: 150;" text="🚪 Déconnexion" />
        </VBox>
    </left>

    <!-- 📝 Formulaire et statistiques au centre -->
    <center>
        <VBox spacing="20" style="-fx-padding: 15;">
            <!-- Section Formulaire -->
            <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-border-radius: 5; -fx-border-color: #ddd;">
                <GridPane hgap="10" vgap="10">
                    <Label text="Titre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="titreField" promptText="Entrez le titre" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextArea fx:id="descriptionField" prefRowCount="3" promptText="Écrivez une description..." GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Date de publication:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Image:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        <Button onAction="#handleImageChoose" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="📷 Choisir une image" />
                        <ImageView fx:id="imageView" fitHeight="100" fitWidth="100" />
                    </HBox>

                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="150" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>

                <Label fx:id="errorLabel" style="-fx-font-weight: bold; -fx-text-fill: red;" />

                <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                    <Button onAction="#addPublication" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" text="Ajouter" />
                    <Button fx:id="updateButton" onAction="#updatePublication" text="Mettre à jour" style="-fx-background-color: #f1c40f; -fx-text-fill: white;" />
                    <Button text="Exporter PDF" onAction="#generatePDF" />

                </HBox>
            </VBox>

            <!-- Section Statistiques -->
            <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-border-radius: 5; -fx-border-color: #ddd;">
                <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="📊 Statistiques "/>
                <PieChart fx:id="statisticsPieChart"
                          legendVisible="true"
                          style="-fx-pref-height: 250;"
                          animated="false"/>
            </VBox>
        </VBox>
    </center>

    <!-- 📋 TableView à droite -->
    <right>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f8f9fa; -fx-border-color: #ddd; -fx-border-width: 0 0 0 1;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="📋 Liste des Publications" />
                <Region HBox.hgrow="ALWAYS" />
                <Label text="🔎 Rechercher :" />
                <TextField fx:id="searchField" onKeyReleased="#handleSearch" promptText="Titre ou description" />
            </HBox>

            <TableView fx:id="publicationTable" style="-fx-pref-height: 500;">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </right>
</BorderPane>