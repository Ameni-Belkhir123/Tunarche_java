<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="TunArche.controllers.ForgotPasswordController"
            prefWidth="400" prefHeight="300">
    <center>
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Text text="Réinitialiser le mot de passe" styleClass="title"/>

            <TextField fx:id="tfEmail" promptText="Entrez votre email" prefWidth="250" styleClass="artistic-field"/>

            <Button text="Réinitialiser" onAction="#handlePasswordReset" prefWidth="180" styleClass="artistic-button"/>

            <Label fx:id="lblError" styleClass="error-label" visible="false" wrapText="true" maxWidth="250"/>
        </VBox>
    </center>
</BorderPane>
