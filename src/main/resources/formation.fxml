<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane xmlns:fx="http://javafx.com/fxml" fx:controller="TunArche.controllers.showFormationController" fitToWidth="true" prefHeight="600" prefWidth="800">
    <VBox fx:id="rootVBox" spacing="20" alignment="CENTER">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <TextField fx:id="searchField" promptText="Rechercher une formation..." maxWidth="300"/>

        <GridPane fx:id="formationGrid" hgap="20" vgap="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </GridPane>
    </VBox>
</ScrollPane>
